@page
@model ProtoBoatRazorPage.Pages.Bookings.BookBoatModel
@{
    ViewData["Title"] = "BookBoat";
}

<h1>BookBoat</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Image</th>
        </tr>
    </thead>
    @if (Model.BookedBoats.Count != 0)
    {
        <tbody>
            @foreach (var item in Model.BookedBoats)
            {
            <tr>
                <td class="text-center">@item.Value.Name</td>
                <td class="text-center">@item.Value.Type</td>
                <td>
                    <img src="~/Boats/@item.Value.ImageName" width="60" height="70" />
                </td>
                <td>
                    <form method="post">
                        <input asp-for="@Model.Boat.BookedFrom"/>
                        <input asp-for="@Model.Boat.BookedTo"/>
                        <button asp-page-handler="Save" asp-route-id="@item.Value.Id" class="btn btn-primary">Sæt dato</button>
                    </form>
                </td>
                <td>
                    <form method="post">
                        <button asp-page-handler="Delete" asp-route-id="@item.Value.Id" class="btn btn-danger btn-group-lg pull-right">
                            Delete-From-Chart
                        </button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    }
</table>
<div class="text-center">
    <a asp-page="/Boats/IndexBoats" class="btn btn-primary">Continue booking</a>
    <a asp-page="CheckOut" class="btn btn-primary">Check Out</a>
</div>
